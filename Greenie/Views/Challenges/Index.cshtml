@using Greenie
@model List<Challenge>

<h1>Challenges Currently Available</h1>

<p>
    <a asp-controller="Challenges" asp-action="Add">Add Challenge</a>
</p>


<p>
    <a asp-controller="Challenges" asp-action="Delete">Delete Challenge</a>
</p>

@{
    ViewData["Title"] = "OUR CHALLENGE LIST";
    ViewData["Controller"] = "Challenges";
    ViewBag.Links = new Dictionary<string, string> 
        {
            { "Add", "Add a New Challenge"},
            { "Delete", "Delete Challenges" }
        };
}

<div>
    @if (Model?.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                </tr>
            </thead>
            @foreach(Challenge challenge in Model)
            {
                <tr>
                    <td>@challenge.Id</td>
                    <td>@challenge.Title</td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No challenges yet!</p>
    }
</div>
